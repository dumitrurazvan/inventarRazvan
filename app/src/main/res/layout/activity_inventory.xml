<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvInventoryTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Inventar cameră"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvInventoryRoomInfo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="(informații cameră)"
        android:textSize="16sp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/tvInventoryTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/etSearchNrInv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Caută după nr. inventar"
        android:imeOptions="actionDone"
        android:inputType="text"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvInventoryRoomInfo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvInventoryStatus"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Se încarcă bunurile..."
        android:textSize="14sp"
        android:textColor="?android:attr/textColorSecondary"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/etSearchNrInv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/progressBarInventory" />

    <ProgressBar
        android:id="@+id/progressBarInventory"
        style="?android:attr/progressBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/tvInventoryStatus"
        app:layout_constraintBottom_toBottomOf="@id/tvInventoryStatus"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnPrintSelected"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Tipărește și printează selectate"
        android:textAllCaps="false"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvInventoryStatus"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- NEW: filter bar: only-unidentified + counts -->
    <LinearLayout
        android:id="@+id/layoutFilterBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/btnPrintSelected"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <CheckBox
            android:id="@+id/cbOnlyUnidentified"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Doar neidentificate" />

        <TextView
            android:id="@+id/tvInventoryCounts"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Identificate: 0 / 0 | Restant: 0"
            android:gravity="end"
            android:textSize="13sp"
            android:textColor="?android:attr/textColorSecondary"
            android:layout_weight="1" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvAssets"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/layoutFilterBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
