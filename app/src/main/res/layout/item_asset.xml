<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <!-- Status bar -->
    <View
        android:id="@+id/viewStatusBar"
        android:layout_width="4dp"
        android:layout_height="0dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Checkbox (for future batch print) -->
    <CheckBox
        android:id="@+id/cbAsset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvAssetTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Titlu asset"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/viewStatusBar"
        app:layout_constraintEnd_toStartOf="@id/cbAsset" />

    <TextView
        android:id="@+id/tvAssetSubtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Denumire – NR_INV"
        android:textSize="14sp"
        android:textColor="?android:attr/textColorSecondary"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toBottomOf="@id/tvAssetTitle"
        app:layout_constraintStart_toStartOf="@id/tvAssetTitle"
        app:layout_constraintEnd_toStartOf="@id/cbAsset" />

    <TextView
        android:id="@+id/tvAssetOwner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Gestionar"
        android:textSize="13sp"
        android:textColor="?android:attr/textColorSecondary"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toBottomOf="@id/tvAssetSubtitle"
        app:layout_constraintStart_toStartOf="@id/tvAssetTitle"
        app:layout_constraintEnd_toStartOf="@id/btnValidate" />

    <Button
        android:id="@+id/btnValidate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Validează și printează"
        android:textAllCaps="false"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/tvAssetSubtitle"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
